{
  "name": "agentlinker",
  "version": "0.1.0",
  "description": "Canonical .agents manager with symlinks for popular AI tools",
  "type": "module",
  "license": "MIT",
  "bin": {
    "agentlinker": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target node --format esm",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "release": "release-it"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.4.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
